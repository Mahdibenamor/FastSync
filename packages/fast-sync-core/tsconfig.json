{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests", "dist", "**/*spec.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../.",
    "module": "commonjs",
    "esModuleInterop":true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": false,
    "strictPropertyInitialization": false
  }
}