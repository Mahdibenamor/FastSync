{
  "include": ["core/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "target": "ES2022",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs"
  }
}